<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="promobi.newyorkimes.com.newyorkmvp.ui.TopStoriesDetail.TopStoriesDetail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/back_image_activity_top_stories_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:background="@color/transParentWhite"
                app:srcCompat="@drawable/ic_shape"
                android:elevation="0dp" />

            <TextView
                android:id="@+id/header_title_internel_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="Top Stories Detail"
                />

        </RelativeLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider_activity_top_stories_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:indicator_visibility="visible"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:text="Auther"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/warm_grey"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/auther_name_news_activity_top_stories_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:text="Auther"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/warm_grey"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/time_news_activity_top_stories_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/warm_grey"
                android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/detail_news_activity_top_stories_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/warm_grey"
            android:layout_margin="4dp"/>




        </LinearLayout>



    </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
